<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS File -->
    @Styles.Render("~/Scripts/bootstrap/css/bootstrap.min.css")
    <!-- Libraries CSS Files -->
    @Styles.Render("~/Scripts/fontawesome/css/all.css")
    @Styles.Render("~/Scripts/animate/animate.min.css")
    @Styles.Render("~/Scripts/ionicons/css/ionicons.min.css")
    @Styles.Render("~/Scripts/owlcarousel/assets/owl.carousel.min.css")
    @Styles.Render("~/Scripts/lightbox/css/lightbox.min.css")
    @Styles.Render("~/Content/style.css")

    <!-- Favicons -->
    <link href="img/favicon.png" rel="icon">
    <link href="img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- =======================================================
      Theme Name: DevFolio
      Theme URL: https://bootstrapmade.com/devfolio-bootstrap-portfolio-html-template/
      Author: BootstrapMade.com
      License: https://bootstrapmade.com/license/
    ======================================================= -->
</head>
<body id="page-top">
    <!--/ Nav Star /-->
    <nav class="navbar navbar-b navbar-trans navbar-expand-md fixed-top" id="mainNav">
        <div class="container">
            @Html.ActionLink("Portfolio", "Index", new { area = "" }, new { @class = "navbar-brand js-scroll" })
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarDefault"
                    aria-controls="navbarDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <div class="navbar-collapse collapse justify-content-end" id="navbarDefault">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", new { controller = "Home" }, new { @class = "nav-link js-scroll" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Projects", "Projects", new { controller = "Home" }, new { @class = "nav-link js-scroll" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Skills", "Skills", new { controller = "Home" }, new {  @class = "nav-link js-scroll" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact", "Contact", new { controller = "Home" }, new { @class = "nav-link js-scroll" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!--/ Nav End /-->

        @RenderBody()
        <footer class="fixed-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="copyright-box">
                            <p class="copyright">&copy; Copyright <strong>LVM</strong>. All Rights Reserved</p>
                            <!--<div class="credits">

                            All the links in the footer should remain intact.
                            You can delete the links only if you purchased the pro version.
                            Licensing information: https://bootstrapmade.com/license/
                            Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/buy/?theme=DevFolio

                                      Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
                                  </div>-->
                        </div>
                    </div>
                </div>
            </div>
        </footer>

    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>
    <div id="preloader"></div>

    <!-- JavaScript Libraries -->
    @Scripts.Render("~/Scripts/jquery/jquery.min.js")
    @Scripts.Render("~/Scripts/jquery/jquery-migrate.min.js")
    @Scripts.Render("~/Scripts/popper/popper.min.js")
    @Scripts.Render("~/Scripts/bootstrap/js/bootstrap.min.js")
    @Scripts.Render("~/Scripts/easing/easing.min.js")
    @Scripts.Render("~/Scripts/counterup/jquery.waypoints.min.js")
    @Scripts.Render("~/Scripts/counterup/jquery.counterup.js")
    @Scripts.Render("~/Scripts/owlcarousel/owl.carousel.min.js")
    @Scripts.Render("~/Scripts/lightbox/js/lightbox.min.js")
    @Scripts.Render("~/Scripts/typed/typed.min.js")
    <!-- Contact Form JavaScript File -->
    @Scripts.Render("~/Scripts/contactform/contactform.js")
    <!-- Template Main Javascript File -->
    @Scripts.Render("~/Scripts/js/main.js")
    @RenderSection("scripts", required: false)
</body>
</html>
